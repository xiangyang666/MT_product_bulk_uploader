{
  "name": "meituan-product-upload",
  "version": "1.0.0",
  "description": "美团商品批量上传管理工具",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build --mode production && electron-builder",
    "electron:build:win": "vite build --mode production && electron-builder --win",
    "electron:build:mac": "vite build --mode production && electron-builder --mac",
    "electron:build:all": "vite build --mode production && electron-builder --win --mac"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.2",
    "element-plus": "^2.5.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "dmg-builder": "^26.7.0",
    "electron": "^40.2.1",
    "electron-builder": "^24.9.1",
    "fast-check": "^3.15.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.meituan.product.upload",
    "productName": "美团商品上传工具",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/meituan.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/meituan.png",
      "category": "public.app-category.business",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "美团商品上传工具"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "public/meituan.png"
    }
  }
}
