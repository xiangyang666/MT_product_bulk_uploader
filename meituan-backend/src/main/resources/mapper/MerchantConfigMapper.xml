<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meituan.product.mapper.MerchantConfigMapper">
    
    <!-- 根据商家ID查询配置 -->
    <select id="selectByMerchantId" resultType="com.meituan.product.entity.MerchantConfig">
        SELECT * FROM t_merchant_config
        WHERE merchant_id = #{merchantId}
        AND deleted = 0
        LIMIT 1
    </select>
    
</mapper>
